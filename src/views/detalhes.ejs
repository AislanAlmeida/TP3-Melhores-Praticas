<%- include("./componentes/header") %>
<div class="container">
    <h1>Cadastro Efetuado</h1>
    <a role="button" class="btn btn-outline-primary btn-sm" href="/alunos" id="btn-verTodos">ver todos</a>
    <hr>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cadastrado: <%= nome %></h4>
            <div class="mb-3">
                    <label class="form-label">Id</label>
                    <input type="text" class="form-control" disabled name="nome" value="<%= id %>">
                    <label class="form-label">Nome</label>
                    <input type="text" class="form-control"  disabled value="<%= nome %>">
                    <label for="exampleFormControlInput1" class="form-label">Email</label>
                    <input type="email" class="form-control"  disabled value="<%= email %>">
                    <label class="form-label">Matricula</label>
                    <input type="text" class="form-control" disabled value="<%= matricula %>">
                    <hr>
                    <a href="/" role="button" class="btn btn-primary">voltar</a>
                    <a href="/alunos/cadastrar" role="button" class="btn btn-success btn-sm" >+ Adicionar</a>
            </div>
        </div>
    </div>
</div>
<%- include("./componentes/footer") %>